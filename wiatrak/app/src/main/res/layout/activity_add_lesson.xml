<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddLessonActivity">

    <EditText
        android:id="@+id/subjectNameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter subject name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
    <CheckBox
        android:id="@+id/checkbox_monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        app:layout_constraintTop_toBottomOf="@id/subjectNameEditText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <CheckBox
        android:id="@+id/checkbox_tuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuesday"
        app:layout_constraintTop_toBottomOf="@id/checkbox_monday"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <CheckBox
        android:id="@+id/checkbox_wednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wednesday"
        app:layout_constraintTop_toBottomOf="@id/checkbox_tuesday"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>
    <CheckBox
        android:id="@+id/checkbox_thursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thursday"
        app:layout_constraintTop_toBottomOf="@id/checkbox_wednesday"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <CheckBox
        android:id="@+id/checkbox_friday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friday"
        app:layout_constraintTop_toBottomOf="@id/checkbox_thursday"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textView_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O której:"
        app:layout_constraintTop_toBottomOf="@id/checkbox_friday"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"/> <!-- Moved slightly to the left by reducing margin -->


    <Spinner
        android:id="@+id/spinner_time_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_time_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textView_week_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tydzień:"
        app:layout_constraintTop_toBottomOf="@id/spinner_time_selection"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- New CheckBox for "parzysty" -->
    <CheckBox
        android:id="@+id/checkbox_parzysty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parzysty"
        app:layout_constraintTop_toBottomOf="@id/textView_week_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- New CheckBox for "nieparzysty" -->
    <CheckBox
        android:id="@+id/checkbox_nieparzysty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nieparzysty"
        app:layout_constraintTop_toBottomOf="@id/checkbox_parzysty"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lessonsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/checkbox_nieparzysty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>
    <ListView
        android:id="@+id/listViewSubjects"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/checkbox_nieparzysty"
        app:layout_constraintBottom_toTopOf="@id/button_save_changes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />


    <Button
        android:id="@+id/button_save_changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zapisz zmiany"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>