<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MessageFragment">

    <TextView
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.8"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/back_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/edit_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" >


        <TextView
            android:id="@+id/message_tv"
            style="@style/EditStyleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/message_delete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id = "@+id/ok_button"
            android:text ="@string/ok"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toStartOf="@id/decline_button"
            app:layout_constraintStart_toStartOf="@id/back_field"
            app:layout_constraintTop_toBottomOf="@id/message_tv"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id = "@+id/decline_button"
            android:layout_marginStart="30dp"
            android:text ="@string/cancel"
            app:layout_constraintTop_toTopOf="@id/ok_button"
            app:layout_constraintStart_toEndOf="@id/ok_button"
            app:layout_constraintEnd_toEndOf="@id/back_field"
            app:layout_constraintTop_toBottomOf="@id/message_tv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>