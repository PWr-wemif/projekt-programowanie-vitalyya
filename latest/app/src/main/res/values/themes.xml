<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ScheduleApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ScheduleApp" parent="Base.Theme.ScheduleApp" />
    <style name="TabStyle" parent="Base.Theme.ScheduleApp" >
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tab_deactive</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TimeStyle" parent="Base.Theme.ScheduleApp" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LessonStyle" parent="Base.Theme.ScheduleApp" >
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="EditStyleHead" parent="Base.Theme.ScheduleApp" >
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="EditStyleText" parent="Base.Theme.ScheduleApp" >
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditStyleInput" parent="Base.Theme.ScheduleApp" >
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="EditStyleSign" parent="Base.Theme.ScheduleApp" >
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditStyleError" parent="Base.Theme.ScheduleApp" >
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>