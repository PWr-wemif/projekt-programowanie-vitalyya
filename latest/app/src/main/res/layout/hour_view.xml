<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
            android:id="@+id/hour_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="08:00"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.2" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/black"
            android:id = "@+id/line_v8"
            app:layout_constraintBottom_toBottomOf="@id/hour_id"
            app:layout_constraintStart_toEndOf="@id/hour_id"
            app:layout_constraintTop_toTopOf="@id/hour_id" />


        <TextView
            android:id="@+id/min015"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toTopOf="@id/min1530"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/hour_id"
            app:layout_constraintTop_toTopOf="@id/hour_id" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/black"
            android:id = "@+id/line_g81"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/hour_id"
            app:layout_constraintTop_toBottomOf="@id/min015" />

        <TextView
            android:id="@+id/min1530"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toTopOf="@id/min3045"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/hour_id"
            app:layout_constraintTop_toBottomOf="@id/min015" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id = "@+id/line_g82"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/hour_id"
            app:layout_constraintTop_toBottomOf="@id/min1530" />

        <TextView
            android:id="@+id/min3045"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toTopOf="@id/min4560"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/hour_id"
            app:layout_constraintTop_toBottomOf="@id/min1530"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id = "@+id/line_g83"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/hour_id"
            app:layout_constraintTop_toBottomOf="@id/min3045" />

        <TextView
            android:id="@+id/min4560"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/hour_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/hour_id"
            app:layout_constraintTop_toBottomOf="@id/min3045"/>

</androidx.constraintlayout.widget.ConstraintLayout>